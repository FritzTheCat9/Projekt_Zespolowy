@{
    ViewData["Title"] = "Formularz Kontaktowy";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model ProjektSklep.Models.ViewModels.ContactFormViewModel
}

<!--Section: Contact v.2-->
<section class="mb-4">

    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center my-4">Formularz kontaktowy</h2>
    <!--Section description-->
    @*<p class="text-center w-responsive mx-auto mb-5">
            Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
            a matter of hours to help you.
        </p>*@
    <p class="text-center w-responsive mx-auto mb-5">
        Masz jakieś pytania? Nie wahaj się napisać bezpośrednio do nas. Nasz zespół odpowie Ci w ciągu kilku godzin, abyś mógł uzyskać pomoc. <br />
        Jeśli masz pytanie odnośnie konkretnego produktu, nie zapomnij podać jego numer ID, aby łatwiej nam było go odnaleźć.
    </p>
    <hr />

    <div class="row">

        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
            <form asp-action="ContactForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="form-group col-md-6">
                        <div class="md-form mb-0">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="form-group col-md-6">
                        <div class="md-form mb-0">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <!--Grid column-->

                </div>
                <hr />
                <!--Grid row-->
                <!--Grid row-->
                <div class="form-group col-md-12">
                    <div class="md-form mb-0">
                        <label asp-for="Topic" class="control-label"></label>
                        <input asp-for="Topic" class="form-control" />
                        <span asp-validation-for="Topic" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="form-group col-md-12">
                        <div class="md-form mb-0">
                            <label asp-for="Message" class="control-label"></label>
                            <input asp-for="Message" class="form-control" />
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!--Grid row-->

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>

            <div class="status"></div>
        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li>
                    <p>San Francisco, CA 94126, USA</p>
                </li>

                <li>
                    <p>+ 01 234 567 89</p>
                </li>

                <li>
                    <p>contact@mdbootstrap.com</p>
                </li>
            </ul>
        </div>
        <!--Grid column-->

    </div>

</section>
<!--Section: Contact v.2-->