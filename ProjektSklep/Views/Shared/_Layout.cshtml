    <div class="container" style="margin-top:20px">
        <div class="row">
            <div class="col-3">
                <div class="row">
                    <div class="col">
                        @RenderSection("Categories", required: false)
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @RenderSection("Menu", required: false)
