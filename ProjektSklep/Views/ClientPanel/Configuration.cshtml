
@{
    @model ProjektSklep.Models.ViewModels.ConfigurationViewModel
    ViewData["Title"] = "Configuration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Configuration</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Configuration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SendingNewsletter" class="control-label"></label>
                <input asp-for="SendingNewsletter" class="form-control" />
                <span asp-validation-for="SendingNewsletter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>