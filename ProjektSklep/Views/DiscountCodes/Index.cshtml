@model IEnumerable<ProjektSklep.Models.DiscountCode>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

<h1>Kody rabatowe</h1>

<p>
    <a asp-action="Create">Dodaj nowy</a>
</p>
<table class="table">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.DiscountCodeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscoundCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Percent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountCodeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscoundCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Percent)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DiscountCodeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DiscountCodeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DiscountCodeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
