@model ProjektSklep.Models.ViewModels.OrderViewModel;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShippingMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShippingMethod.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentMethod.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductIdQuantity.ElementAt(0).Key.ProductID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductIdQuantity.ElementAt(0).Key.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductIdQuantity.ElementAt(0).Key.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductIdQuantity.ElementAt(0).Key.Price)
                </th>
                <th>
                    Liczba
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductIdQuantity)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Key.ProductID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Key.Name)
                    </td>
                    <td>
                        <img src="@Url.Content(item.Key.Image)" style="height: 100px; width: 150px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Key.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
