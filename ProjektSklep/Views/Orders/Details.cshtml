@model ProjektSklep.Models.ViewModels.OrderViewModel;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShippingMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShippingMethod.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentMethod.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>
<div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Order.ElementAt(0).ProductID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Order.ElementAt(0).Name)
                    </th>                  
                    <th>
                        @Html.DisplayNameFor(model => model.Order.ElementAt(0).Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Order.ElementAt(0).Price)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Order)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductID)                        
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <img src="@Url.Content(item.Image)" style="height: 100px; width: 150px;" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
</div>
